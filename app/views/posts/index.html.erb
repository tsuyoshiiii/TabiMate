<h3>Posts</h3>

<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, placeholder: "キーワードを入力" %>
  <%= form.submit "search" %>
<% end %>

<% if params[:search].present? %>
  <p>Search result「<%= params[:search] %>」</p>
<% end %>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
       <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post.title, post_path(post.id) %>
          </td>
          <td>
            <%= post.body %>
          </td>
          <td>コメント数:
            <%= post.post_comments.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>