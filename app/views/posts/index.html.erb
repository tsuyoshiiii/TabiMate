<h3>Posts</h3>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
       <% @posts.each do |post| %>
          <tr>
          <td>
          <%= link_to post.title, post_path(post.id) %>
        </td>
        <td>
          <%= post.body %>
        </td>
          </tr>
        <% end %>
    </tbody>
  </table>