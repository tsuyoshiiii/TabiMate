<h3>Posts</h3>

<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, placeholder: "キーワードを入力" %>
  <%= form.submit "search" %>
<% end %>

<% if params[:search].present? %>
  <p>Search result「<%= params[:search] %>」</p>
<% end %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
       <% @posts.each do |post| %>
          <tr>
          <td>
          <%= link_to post.title, post_path(post.id) %>
        </td>
        <td>
          <%= post.body %>
        </td>
          </tr>
        <% end %>
    </tbody>
  </table>