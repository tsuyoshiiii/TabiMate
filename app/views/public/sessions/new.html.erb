<div class="container my-5">
  <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">
      
      <div class="text-center mb-4">
        <div class="display-6 fw-bold text-primary mb-2">
          <i class="fa-solid fa-plane-up me-2"></i>TabiMate
        </div>
        <h2 class="h5 fw-bold text-secondary">ログイン</h2>
      </div>

      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4 p-md-5">
          
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= form_with model: @member, url: member_session_path, local: true do |f| %>
            
            <div class="mb-4">
              <%= f.label :email, "メールアドレス", class: "form-label small fw-bold" %>
              <div class="input-group">
                <span class="input-group-text bg-light border-0">
                  <i class="fa-solid fa-envelope text-muted"></i>
                </span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                    class: "form-control bg-light border-0", placeholder: "example@mail.com" %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :password, "パスワード", class: "form-label small fw-bold" %>
              <div class="input-group">
                <span class="input-group-text bg-light border-0">
                  <i class="fa-solid fa-lock text-muted"></i>
                </span>
                <%= f.password_field :password, autocomplete: "current-password", 
                    class: "form-control bg-light border-0", placeholder: "••••••••" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-4 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン状態を保存する", class: "form-check-label small text-muted" %>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.submit "ログイン", class: "btn btn-primary rounded-pill py-2 fw-bold shadow-sm" %>
            </div>
          <% end %>

          <div class="text-center mt-4 small">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to root_path, class: "text-decoration-none text-secondary small" do %>
          <i class="fa-solid fa-house me-1"></i>トップページへ戻る
        <% end %>
      </div>

    </div>
  </div>
</div>
