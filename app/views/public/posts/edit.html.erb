<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      
      <div class="mb-4 text-center">
        <h2 class="h3 fw-bold">
          <i class="fa-solid fa-pen-nib me-2 text-primary"></i>Editing Post
        </h2>
      </div>

      <% if @post && @post.errors.any? %>
        <div class="alert alert-danger shadow-sm border-0 mb-4" role="alert">
          <div class="fw-bold mb-2">
            <i class="fa-solid fa-circle-exclamation me-2"></i>
            <%= @post.errors.count %>件のエラーにより更新できませんでした
          </div>
          <ul class="mb-0 small">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">
          <%= form_with model: @post, local: true do |f| %>
            

            <div class="mb-4">
              <%= f.label :title, "タイトル", class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control form-control-lg bg-light border-0 ps-3", placeholder: "タイトルを入力" %>
            </div>


            <div class="mb-4">
              <%= f.label :body, "内容", class: "form-label fw-bold" %>
              <%= f.text_area :body, class: "form-control bg-light border-0 ps-3", rows: 10, placeholder: "内容を入力" %>
            </div>


            <div class="d-grid gap-3">
              <%= f.submit '変更を保存する', class: "btn btn-primary rounded-pill py-3 fw-bold shadow-sm" %>
              
              <div class="d-flex justify-content-center mt-2">
                <%= link_to post_path(@post), class: "text-secondary text-decoration-none small mx-3" do %>
                  <i class="fa-solid fa-file-lines me-1"></i>コメントに戻る
                <% end %>
                <span class="text-light">|</span>
                <%= link_to posts_path, class: "text-secondary text-decoration-none small mx-3" do %>
                  <i class="fa-solid fa-list me-1"></i>一覧に戻る
                <% end %>
              </div>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>