<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="h4 fw-bold mb-4">グループ編集</h2>

          <%= form_with model: @group, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :name, "グループ名", class: "form-label fw-bold" %>
              <%= f.text_field :name, class: "form-control", placeholder: "例: 温泉巡りコミュニティ" %>
            </div>

            <div class="mb-3">
              <%= f.label :introduction, "紹介文", class: "form-label fw-bold" %>
              <%= f.text_area :introduction, class: "form-control", rows: 5, placeholder: "グループの目的や活動内容を書いてください" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "変更を保存する", class: "btn btn-primary rounded-pill" %>
              <%= link_to "キャンセル", group_path(@group), class: "btn btn-outline-secondary rounded-pill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>