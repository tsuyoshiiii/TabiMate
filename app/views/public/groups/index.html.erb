<div class="container my-5">
  <h2 class="h3 fw-bold mb-4">グループ一覧</h2>

  <div class="mb-4 p-3 bg-light rounded shadow-sm">
    <%= form_with url: groups_path, method: :get, local: true, class: "d-flex" do |f| %>
      <%= f.text_field :search, class: "form-control me-2", placeholder: "グループ名を検索..." %>
      <%= f.submit "検索", class: "btn btn-outline-success" %>
    <% end %>
  </div>

  <% if params[:search].present? %>
  <div class="mb-3">
    <span class="text-secondary small">「<strong><%= params[:search] %></strong>」の検索結果: <%= @groups.count %> 件</span>
    <%= link_to "クリア", groups_path, class: "ms-2 small text-decoration-none" %>
  </div>
<% end %>
  
  <div class="text-end mb-3">
    <%= link_to '新しいグループを作成', new_group_path, class: 'btn btn-success' %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @groups.each do |group| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold"><%= link_to group.name, group_path(group), class: "text-decoration-none text-primary" %></h5>
            <p class="card-text text-muted flex-grow-1"><%= truncate(group.introduction, length: 70) %></p>
            <div class="mt-auto pt-2 border-top">
              <p class="card-text small mb-1">
                <strong>オーナー:</strong> <%= group.owner.name %>
              </p>
              <p class="card-text small">
                <strong>メンバー数:</strong> <%= group.members.count %> 名
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>