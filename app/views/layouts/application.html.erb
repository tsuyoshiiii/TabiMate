<!DOCTYPE html>
<html>
  <head>
    <title>TabiMate</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5bd51b8c93.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="<%= root_path %>">
            <span>TabiMate</span>
          </a>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if member_signed_in? %>
                  <a class="nav-link text-light" href="<%= member_path(current_member) %>">
                  <i class="fa-solid fa-home"></i>
                    <span>Mypage</span>
                  </a>

                  <a class="nav-link text-light" href="<%= member_path(current_member) %>">
                  <i class="fa-solid fa-users"></i>
                    <span>Groups</span>
                  </a>

                  <a class="nav-link text-light" href="<%= new_post_path %>">
                  <i class="fa-solid fa-book-open"></i>
                    <span>New Post</span>
                  </a>

                  <a class="nav-link text-light" href="<%= posts_path %>">
                  <i class="fa-solid fa-book-open"></i>
                    <span>Posts</span>
                  </a>

                  <a class="nav-link text-light" href="<%= destroy_member_session_path %>", data-method="delete">
                  <i class="fa-solid fa-sign-out-alt"></i>
                    <span>Log out</span>
                  </a>

                <% else %>
                  <a class="nav-link text-light" href="<%= root_path %>">
                  <i class="fa-solid fa-home"></i>
                    <span>Home</span>
                  </a>

                  <a class="nav-link text-light" href="<%= about_path %>">
                  <i class="fa-solid fa-link"></i>
                    <span>About</span>
                  </a>

                  <a class="nav-link text-light" href="<%= new_member_registration_path %>">
                  <i class="fa-solid fa-user-plus"></i>
                    <span>Sign up</span>
                  </a>

                  <a class="nav-link text-light" href="<%= new_member_session_path %>">
                  <i class="fa-solid fa-sign-in-alt"></i>
                    <span>Log in</span>
                  </a>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header>
        <%= yield %>
    </body>


<main>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</main>

</html>
